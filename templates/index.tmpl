<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="./assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="/assets/favicon.ico">
    <title>{{ .title }}</title>

    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>

    <link href="/assets/css/fontawesome.min.css" rel="stylesheet">
    <link href="/assets/css/solid.min.css" rel="stylesheet">

    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" />
    <script src="/assets/js/bootstrap.bundle.min.js"></script>
    <link href="/assets/css/theme.css" rel="stylesheet" />

    <script src="/assets/js/alpine.min.js" defer></script>
    <script src="/assets/js/mountain.js"></script>
</head>

<body class="g-sidenav-show bg-gray-100" x-data="startInstance()" x-init="goto(getStartUrl())">
    <header class="navbar navbar-expand-lg navbar-dark bd-navbar sticky-top bg-primary">
        <nav class="container-xxl bd-gutter flex-wrap flex-lg-nowrap">
            <a href="https://mountain.help14.com" class="navbar-brand p-0 me-0 me-lg-2">
                <img src="/assets/img/mountain.png" style="height: 32px" />
            </a>
            <div class="ms-md-auto pe-md-3 d-flex align-items-center justify-content-start">
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        Dropdown
                    </button>
                    <ul class="dropdown-menu">
                        <li><button class="dropdown-item" type="button">Action</button></li>
                        <li><button class="dropdown-item" type="button">Another action</button></li>
                        <li><button class="dropdown-item" type="button">Something else here</button></li>
                    </ul>
                </div>
            </div>
            <div class="ms-md-auto pe-md-3 d-flex align-items-center justify-content-end">
                <div class="input-group">
                    <span class="input-group-text text-body">
                        <i class="fas fa-search" aria-hidden="true"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Type here...">
                </div>
            </div>
        </nav>
    </header>

    <nav class="container-xxl mt-5 mb-5" data-scroll="false">
        <div class="btn-group" role="group" aria-label="Navigation">
            <template x-for="(bc, index) in breadcrumbs">
                <button type="button" class="btn mb-0 btn-light" x-on:click="goto(bc.path)" x-html="bc.name"
                    aria-current="page"></button>
                <!-- :class="{ 'btn-light': index === breadcrumbs.length-1, 'btn-secondary': index < breadcrumbs.length-1 }" -->
            </template>
        </div>
    </nav>

    <div class="container-xxl bd-gutter mt-3 my-md-4 bd-layout h-auto position-relative" aria-live="polite"
        aria-atomic="true">
        <div class="row overflow-scroll" x-show="!emptyFolder">
            <template x-for="file in files">
                <div class="col-xl-3 col-sm-6 d-grid mt-2 mb-2">
                    <button type="button" class="btn btn-light"
                        :class="{'btn-light': !file.selected, 'btn-primary': file.selected}"
                        @click="file.selected=!file.selected" @dblclick="if(file.directory) goto(file.path)">
                        <div class="row p-1 d-flex">
                            <div class="col-3 align-middle fs-2 align-self-center"
                                x-text="`${file.directory ? '📁' : '📄'}`">
                            </div>
                            <div class="col-8 fs-6 text-start text-wrap text-break align-middle align-self-center"
                                x-text="file.name">
                            </div>
                        </div>
                    </button>
                </div>
            </template>
        </div>
        <div class="row p-5" x-show="emptyFolder">
            <div class=" font-medium fs-1 text-xl truncate text-secondary text-center">
                <i class="fa fa-regular fa-face-smile-wink"></i>
            </div>
            <div class="font-medium fs-1 text-xl truncate text-secondary text-center">
                This folder is empty
            </div>
        </div>

        <div class="toast-container top-0 end-0 p-3"></div>
    </div>

    <footer class="footer fixed-bottom bg-light">

    </footer>
</body>

</html>