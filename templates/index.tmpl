<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="./assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="/assets/favicon.ico">

    <title>{{ .title }}</title>
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <!-- Nucleo Icons -->
    <link href="./assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="./assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link href="./assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link id="pagestyle" href="./assets/css/argon-dashboard.css?v=2.0.4" rel="stylesheet" />

    <script src="/assets/js/alpine.min.js" defer></script>
    <script src="/assets/js/mountain.js"></script>
</head>

<body class="g-sidenav-show bg-gray-100" x-data="startInstance()" x-init="goto(getStartUrl())">
    <header class="navbar navbar-expand-lg navbar-dark bd-navbar sticky-top bg-primary">
        <nav class="container-xxl bd-gutter flex-wrap flex-lg-nowrap">
            <a href="https://mountain.help14.com" class="navbar-brand p-0 me-0 me-lg-2">
                <img src="/assets/img/mountain.png" style="height: 32px" />
            </a>
            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        Dropdown
                    </button>
                    <ul class="dropdown-menu">
                        <li><button class="dropdown-item" type="button">Action</button></li>
                        <li><button class="dropdown-item" type="button">Another action</button></li>
                        <li><button class="dropdown-item" type="button">Something else here</button></li>
                    </ul>
                </div>
            </div>
            <div class="ms-md-auto pe-md-3 d-flex align-items-center justify-content-end">
                <div class="input-group">
                    <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
                    <input type="text" class="form-control" placeholder="Type here...">
                </div>
            </div>
        </nav>
    </header>

    <nav class="container-xxl mt-5 mb-5" data-scroll="false">
        <div class="btn-group" role="group" aria-label="Navigation">
            <template x-for="(bc, index) in breadcrumbs">
                <button type="button" class="btn mb-0" x-on:click="goto(bc.path)" x-html="bc.name" aria-current="page"
                    :class="{ 'btn-light': index === breadcrumbs.length-1, 'btn-secondary': index < breadcrumbs.length-1 }"></button>
            </template>
        </div>
    </nav>

    <div class="container-xxl bd-gutter mt-3 my-md-4 bd-layout h-auto">
        <div class="row overflow-scroll" x-show="!emptyFolder">
            <template x-for="file in files">
                <div class="col-xl-3 col-sm-6 d-grid">
                    <button type="button" class="btn btn-light"
                        :class="{'btn-light': !file.selected, 'btn-primary': file.selected}"
                        @click="file.selected=!file.selected" @dblclick="if(file.directory) goto(file.path)">
                        <div class="row p-1 d-flex">
                            <div class="col-3 align-middle fs-2 align-self-center"
                                x-text="`${file.directory ? 'ðŸ“' : 'ðŸ“„'}`">
                            </div>
                            <div class="col-8 fs-6 text-start text-wrap text-break align-middle align-self-center"
                                x-text="file.name">
                            </div>
                        </div>
                    </button>
                </div>
            </template>
            <div class="row" x-show="emptyFolder">
                <div class="font-medium text-xl truncate">
                    This folder is empty
                </div>
            </div>
        </div>

    </div>
    <footer class="footer fixed-bottom bg-light">

    </footer>
</body>

</html>